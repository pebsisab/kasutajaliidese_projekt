<script>
  function Menu(e) {
    console.log("Menu function called");
    let list = document.querySelector('.mobile-menu');
    if (window.innerWidth < 1500) {
      if (e.name === 'menu') {
          e.name = "close";
          list.classList.add('top-[55px]');
          list.classList.add('opacity-100');
      } else {
          e.name = "menu";
          list.classList.remove('top-[55px]');
          list.classList.remove('opacity-100');
      }
    }
  }
</script>

<style>
  .mobile-menu li:last-child {
    margin-right: 150px;
  }
  .mobile-menu li:first-child {
    flex-shrink: 0;
  }

  .mobile-menu li {
    flex: 1;
    text-align: center;
    white-space: nowrap;
  }

  /* Muudatused keelelipu asetuse jaoks */
  @media (max-width: 1230px) {
    .mobile-menu {
      justify-content: center;
      display: none; /* Hide the menu items by default */
    }

    span.cursor-pointer {
      display: block; /* Show the menu button */
    }
  }

  /* Adjustments for screens larger than 1200px */
  @media (min-width: 1230px) {
    .ml-auto.flex {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      right: 20px; /* Adjust as needed */
    }
  }

</style>







